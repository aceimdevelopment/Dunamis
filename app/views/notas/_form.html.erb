<%= form_for @nota, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :titulo, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :titulo, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :contenido, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :contenido, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :tipo_nota_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :tipo_nota_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :tema_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :tema_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :asunto_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :asunto_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :url, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :website_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :website_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :resume_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :resume_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                notas_path, :class => 'btn' %>
  </div>
<% end %>
