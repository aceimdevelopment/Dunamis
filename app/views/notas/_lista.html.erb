<%- paso1 = action_name.eql? 'paso1' -%>
<p class= 'label label-info'><b><%= @total_notas %> <%= "Nota".pluralize(@total_notas) %> <%= "Disponible".pluralize(@total_notas) %></b></p>
<%= render :partial => 'panel_website' if paso1 %>

<% display = paso1 ? 'display:none;' : '' %>
<table class="table-bordered">
	<tr class="info">
			<%- @websites.each_with_index do |website,i| -%>
				<%- contador_notas = website.notas.creadas_hoy %>
				<%- contador_notas = paso1 ? contador_notas.sin_resumen.count : contador_notas.validas.sin_resumen.count %>
				<% if contador_notas > 0 %>
					<th id="<%= website.nombre %>_titulo" style="<%= display %> background:skyblue;">
						<%= website.nombre %>
						<span class="badge badge-inverse"><%= contador_notas %></span>
					</th>
				<% end %>
			
			<% end %>
	</tr>
	<tr>

		<%- @websites.each_with_index do |website,i| -%>

			<%- @notas = website.notas.creadas_hoy.order('created_at DESC') %>
			<%- @notas = (action_name.eql? 'paso1') ? @notas.sin_resumen : @notas.validas.sin_resumen %>

			<% if @notas.count > 0 %>	
				<td id="<%= website.nombre %>" style="<%= display %>">
					<div class=contenido_scroll>
						<table class="table table-condensed table-striped table-hover notas">
							<%- @notas.each do |nota| -%>
								<% @nota = nota %>
								<% @website = website %>
									<%= render :partial => 'notas/detalle' %>
							<% end %>
						</table>
					</div>
				</td>
			<% end %>	
		<% end %>
	</tr>
</table>

<% if paso1 %>
	<script type="text/javascript" charset="utf-8">

		$(document).ready(function(){
		  $("table.notas .row-fluid").click(function(){
				var checkbox = $(this).find(':checkbox');
				checkbox.click();
				if(checkbox.is(':checked')) {  
					$(this).parent().parent().addClass('success');
				}else{
					$(this).parent().parent().removeClass('success');
				}
		   });
		});
	</script>
<% else %>
<script type="text/javascript" charset="utf-8">

	$(".voceros").select2({
		formatResult: format,
		formatSelection: format,
		escapeMarkup: function(m) { return m; }
	});

</script>  

<% end %>