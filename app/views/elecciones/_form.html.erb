<%= form_for @eleccion, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :fecha, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :fecha, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :nombre, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :nombre, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :ano, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :ano, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                elecciones_path, :class => 'btn' %>
  </div>
<% end %>
