<%= form_for @resumen, :html => { :class => 'form-horizontal' } do |f| %>

	<div class="control-group">
	  <%= f.label :vocero_id, :class => 'control-label' %>
	  <div class="controls">
	    <%= f.collection_select :vocero_id, Vocero.all, :id, :nombre, {:prompt => true}, {:required => true, :class => 'selects2'} %>
	  </div>
	</div>
  <div class="control-group">
    <%= f.label :contenido, "texto", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :contenido, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :informe_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :informe_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :tema_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :tema_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                resumenes_path, :class => 'btn' %>
  </div>
<% end %>
