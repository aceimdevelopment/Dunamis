<%= form_for @resumen, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :titulo, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :titulo, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :contenido, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :contenido, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :vocero_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :vocero_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :informe_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :informe_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                resumenes_path, :class => 'btn' %>
  </div>
<% end %>
