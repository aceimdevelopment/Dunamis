<%- model_class = Resumen -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:titulo) %>:</strong></dt>
  <dd><%= @resumen.titulo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contenido) %>:</strong></dt>
  <dd><%= @resumen.contenido %></dd>
  <dt><strong><%= model_class.human_attribute_name(:vocero_id) %>:</strong></dt>
  <dd><%= @resumen.vocero_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:informe_id) %>:</strong></dt>
  <dd><%= @resumen.informe_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tema_id) %>:</strong></dt>
  <dd><%= @resumen.tema_id %></dd>
</dl>


<h3 id="resumenes">Resumenes</h3>
<%- if @resumen.notas %>
	<%= @resumen.notas.each do |notas| -%>
		<h6><%= notas.titulo -%></h6>
	<% end %>
<% end %>
