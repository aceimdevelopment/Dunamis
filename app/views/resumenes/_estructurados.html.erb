<div class ="well">
	<table border="0" cellspacing="5" cellpadding="5">
		<tr><td>
			<%= form_tag url_for(:controller => 'resumenes', :action => 'fusionar'), :method => 'get' do %>
				<%= hidden_field_tag "informe_id", @informe.id %> 
				<div style='text-align:right;'>
					<%= submit_tag "fusionar", {:class => "btn btn-success"} if not (action_name=="paso4" and controller_name=="informes")%>
				</div>
				<% @asuntos.each do |asunto| %>

					<% temas = asunto.temas %>
					<% if temas.count > 0 %> 
						</br>
						<dd><em><strong><%= asunto.nombre %></strong></em></dd>
						</br>
						<ul>
							<% temas.each do |tema| %>
								<% resumenes_final = @resumenes.where(:tema_id => tema.id) %>
								<% if resumenes_final.count > 0 %> 
								<li style = 'display:block;'>
									<dd><u><%= tema.nombre %>:</u></dd>
										<% resumenes_final.each do |resumen| %>
											<p>
												
												<%# hidden_field_tag "resumenes_ids[]", resumen.id %> 
												<!-- <input type="checkbox" id="inlineCheckbox1" value="option1" > fusionar														 -->

												<%= notas_estructuradas resumen, "/#{controller_name}/#{action_name}", @informe.id %>
												
												<div style = "text-align: right;background-color: #ddd; padding: 5px;">
													<% if not (action_name=="paso4" and controller_name=="informes") %>
														
														<%# link_to t('.edit', :default => t("helpers.links.edit")),
									                      {:controller => 'resumenes', :action => 'paso2', :id => resumen.id}, {:class => 'btn btn-mini', :style => 'align:rigth;'} %>
														<span class="label label-success">
															<%= check_box_tag "fusionar_resumenes_ids[]", resumen.id %>
															Fusionar
														</span>
														<!-- <button type="button" class="btn btn-primary" data-toggle="button" value="option1">Fusionar</button>	 -->
													
													<% end %>
												</div>
											</p>	
										<% end %>
									</li>
								<% end %>	
							<% end %>
						</ul>
					<% end %>
				<% end %>
			<% end %>
		</td></tr>
	</table>
</div>