<script type="text/javascript" charset="utf-8">
	function eliminar_resumen (resumen_id) {
		$.post('/resumenes/'+resumen_id);
		return false;
	}


	
</script>

<% if @mensaje %>
	<div class="alert <%= @tipo_alerta %>">
	  <button type="button" class="close" data-dismiss="alert">&times;</button>
	  <h4>Alerta:</h4>
	  <%= @mensaje %>
	</div>
<% end %>
<h4>Paso 1</h4>
<h5><%= "#{@resumenes_hoy.count} Resumenes de Hoy" if @resumenes_hoy.count > 0 %></h5>
<%- @resumenes_hoy.each do |resumen_hoy| -%>
	
	<strong><%= resumen_hoy.vocero.nombre if resumen_hoy.vocero %></strong>
	<%= resumen_hoy.descripcion %>

	<%= link_to resumen_path(resumen_hoy), { :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger', :rel => "nofollow"} do %>
		<i class="icon-trash icon-black"></i>
	<% end %>
	</br>
<% end %>
<%= form_for @resumen, :url=>{:action => "paso1_guardar"},  :html => { :class => 'form' } do |f| %>

	<div class="control-group">
	  <%= f.label "Seleccione:", :class => 'control-label' %>
	  <div class="controls">
			<%# hidden_field_tag :id, @resumen.id %>
	    <%= f.collection_select :vocero_id, Vocero.order('nombre DESC'), :id, :nombre, {:prompt => "Vocero"}, {:required => true, :class => 'selects2', :style => 'width: 150px;'} %>
			<%= link_to (""), { :role => 'button',:class => 'btn btn-success btn-mini', :data => {:toggle => 'modal'}, :onclick => "return $('#vocero_nuevo').modal();"} do %>
				<i class="icon-plus icon-white"></i>
				<i class="icon-user icon-white"></i>
			<% end %>

			<%= f.grouped_collection_select :tema_id, Asunto.all, :temas, :nombre, :id, :nombre, {:prompt => "Tema"}, {:required => true, :class => 'selects2', :style => 'width: 600px;'} %>
			<%# f.grouped_collection_select (:city, :country_id, @continents, :countries, :name, :id, :name) %>
			<%= link_to (""), { :role => 'button',:class => 'btn btn-success btn-mini', :data => {:toggle => 'modal'}, :onclick => "return $('#tema_nuevo').modal();"} do %>
				<i class="icon-plus icon-white"></i>
				<i class="icon-th-list icon-white"></i>
			<% end %>
			
	  </div>
	</div>
	
	<div class="form-actions">
		<%= f.submit "Siguiente", :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                resumenes_path, :class => 'btn' %>
	</div>

<%- limpiar_notas_antiguas_inservibles %>
<%# importar_notas_websites %>

<% end %>

<%= form_tag :action => 'paso1' do  -%>
<%= text_field_tag 'filtro' %>  
<%= submit_tag 'filtrar', :class => 'btn btn-success' do %>
	<i class="icon-filter icon-white"></i>
<% end %>
	
<% end %>

<%= render :partial => 'notas' if @resumen.notas.count > 0 %>




<div id="vocero_nuevo" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close fade" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">Nuevo Vocero</h3>
  </div>
  <div class="modal-body">
		<%= render 'voceros/form' %>
		
  </div>
</div>


<div id="tema_nuevo" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close fade" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">Nuevo Tema</h3>
  </div>
  <div class="modal-body">
		<%= render 'temas/form' %>
		
  </div>
</div>
