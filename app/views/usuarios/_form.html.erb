<%= form_for @usuario, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :nombre, :class => 'control-label' %>
    <div class="controls">
			<%= f.text_field :nombre, :class => 'text_field', :autofocus => "autofocus", :placeholder => "nombre…", :required => true %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :nombre_sesion, :class => 'control-label' %>
    <div class="controls">
			<%= f.text_field :nombre_sesion, :class => 'text_field', :placeholder => "nombre_sesion…", :required => true %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :contrasena, :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :contrasena, :class => 'text_field', :placeholder => "contraseña…", :required => true %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "confirmación", :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :contrasena_confirmation, :class => 'text_field', :placeholder => "confirmación de contraseña…", :required => true %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label "correo electrónico", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :correo, :class => 'text_field', :placeholder => "correo electrónico…", :required => true %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                usuarios_path, :class => 'btn' %>
  </div>
<% end %>
