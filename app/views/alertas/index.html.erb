<%= link_to 'Nueva Alerta', new_alerta_path, :class => 'btn btn-primary' %>

<h1>Lista de alertas</h1>

<table class = 'table  table-striped table-bordered table-hover'>
  <tr>
    <th>Fecha</th>
    <th>Contenido</th>
    <th>Resumen</th>
    <th>Temas</th>
    <th>Tipos alertas</th>
    <th>Voceros</th>
    <th>Opciones</th>
  </tr>

<% @alertas.each do |alerta| %>
  <tr>
    <td><%= alerta.fecha %></td>
    <td><%= alerta.contenido %></td>
		<td><%= alerta.resumen %></td>
    <td><%= alerta.tema.full_descripcion %></td>
    <td><%= alerta.tipo_alerta.descripcion.capitalize %></td>
    <td><%= "#{alerta.vocero.nombre} - #{alerta.vocero.descripcion if alerta.vocero.descripcion}"  %></td>
    <!-- <td><%# link_to 'Ver', alerta %>
    |<%# link_to 'Editar', edit_alerta_path(alerta) %>
    |<%# link_to 'Eliminar', alerta, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->

    <td>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_alerta_path(alerta), :class => 'btn btn-mini' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  alerta_path(alerta),
                  :method => :delete,
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '¿Estas seguro de esta acción?')) },
                  :class => 'btn btn-mini btn-danger' %>
    </td>

  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nueva Alerta', new_alerta_path, :class => 'btn btn-primary' %>
