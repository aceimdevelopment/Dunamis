<%- model_class = Informe -%>
<div class="page-header">
  <h1><%="#{t '.title', :default => [:'helpers.titles.paso1', 'New %{model}'], :model => model_class.model_name.human.titleize} - Agrupar por temas" %></h1>
</div>

<% if @mensaje %>
	<div class="alert <%= @tipo_alerta %>">
	  <button type="button" class="close" data-dismiss="alert">&times;</button>
	  <h4>Mensaje:</h4>
	  <%= @mensaje %>
	</div>
<% end %>

<% if @resumenes_con_tema.count > 0 %>
	<% if @resumenes_sin_tema.count <= 0  %>
		<div style="text-align: right;">
			<%= link_to "Siguiente", "paso2", :class => 'btn btn-primary', :type => "button"%>
		</div>
	<% end %>
	<%= render :partial => 'resumenes_con_tema'%>
<% end %>
	<%= render :partial => 'resumenes_sin_tema' if @resumenes_sin_tema.count > 0 %>

  


